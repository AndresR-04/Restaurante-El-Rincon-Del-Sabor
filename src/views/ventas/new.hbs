                <tr>
                  <th scope="row">Cafe</th>
                  <td>2</td>
                  <td>3000</td>
                  <td> <button type="button" class="btn btn-primary ml-4"><i class="fas fa-plus-circle"></i></button></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row factura">
    <div class="col-md-12">
      <div class="card shadow">
        <h4 align="center" class="bg-primary text-light">Detalles de la factura</h4>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table  table-hover mt-3">
              <thead>
                <tr>
                  <th scope="col">Codigo</th>
