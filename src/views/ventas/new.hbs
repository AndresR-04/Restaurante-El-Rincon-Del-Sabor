<div class="container-fluid p-4 ">
  <div class="row">
    <div class="col-md-5 mr-auto">
      <div class="card shadow">
        <h4 class="border text-light bg-primary" align="center">Datos de la factura</h4>
        <div class="card-body">
          <form class="" action="index.html" method="post">
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="Nombre del ciente">
              </div>
              <div class="col">
                <input type="text" class="form-control" placeholder="Pago">
              </div>
            </div>
