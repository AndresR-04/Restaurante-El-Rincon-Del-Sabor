<div class="container">
  <div class="row mx-auto">
    <div class="col-md-4 col-sm-8">
      <div class="card top">
        <div class="card-body">
          <form action="/update/{{plato.id}}" method="post">
            <h4 class="text-center">Actualizar plato</h4>
            <div class="form-group">
              <input type="text" value="{{plato.plato}}" class="form-control" id="exampleInputPassword1" name="plato"
                placeholder="Nombre del plato" required="" pattern="[A-Za-z ]+" tabindex="1" autofocus>
            </div>
            <div class="form-group">
              <input type="text" value="{{plato.precio}} " class="form-control" id="exampleInputPassword1" name="precio"
                placeholder="Precio" required="" pattern="[0-9.]+">
            </div>
            <div class="form-group">
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="Descripcion del plato" required="" pattern="[A-Za-z ]+"
                name="descripcion">{{plato.descripcion}}</textarea>
            </div>
              <label for="">Estado</label>
              <div class="btn-radios p-2">
                  <div class="custom-control custom-radio custom-control-inline mover">
                  <input type="radio" id="customRadioInline1"
                  class="custom-control-input" name="Estado" value="Disponible" checked required="">
                  <label class="custom-control-label" for="customRadioInline1">Disponible</label>
              </div>
                  <div class="custom-control custom-radio custom-control-inline mover" >
                  <input type="radio" id="customRadioInline2"
                  class="custom-control-input" name="Estado" value="Agotado">
                  <label class="custom-control-label" for="customRadioInline2">Agotado</label>
              </div>
            <button class="btn btn-success btn-lg btn-block">Actualizar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
