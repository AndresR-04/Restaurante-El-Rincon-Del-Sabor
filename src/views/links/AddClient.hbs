<div class="container">
    <div class="row mx-auto ">
        <div class="col-md-4 col-sm-8 mx-auto">
            <div class="card top">
                <div class="card-body">
                    <form action="/Addclient" method="post">
                        <h4 class="text-center">Ingresar Cliente</h4>
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputPassword1" name="nombre"
                                placeholder="Nombre del Cliente" required="" pattern="[A-Za-z ]+" tabindex="1"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputPassword1" name="apellido"
                                placeholder="Apellido del Cliente" required="" pattern="[A-Za-z ]+" tabindex="1">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputPassword1" name="cedula"
                                placeholder="Número de Cédula" required="" minlength="8" maxlength="10" tabindex="1" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputPassword1" name="telefono"
                                placeholder="Número Telefónico" required="" minlength="8" maxlength="10" tabindex="1" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputPassword1" name="direccion"
                                placeholder="Direccion del Cliente" required="" pattern="[A-Za-z ]{0-9}+" tabindex="1">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="exampleInputPassword1" name="correo"
                                placeholder="Correo del cliente" required="" tabindex="1">
                        </div>
                        <label for="">Estado</label>
                        <div class="btn-radios p-2">
                            <div class="custom-control custom-radio custom-control-inline mover">
                            <input type="radio" id="customRadioInline1"
                            class="custom-control-input" name="Estado" value="Activo" checked required="">
                            <label class="custom-control-label" for="customRadioInline1">Activo</label>
                        </div>
                            <div class="custom-control custom-radio custom-control-inline mover" >
                            <input type="radio" id="customRadioInline2"
                            class="custom-control-input" name="Estado" value="Inactivo">
                            <label class="custom-control-label" for="customRadioInline2">Inactivo</label>
                        </div>
                </div>
                         
                        <button class="btn btn-success btn-lg btn-block">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>