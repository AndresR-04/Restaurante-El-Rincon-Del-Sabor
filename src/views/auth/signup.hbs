<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="needs-validation" novalidate action="/signup" method="post">
        <div class="card shadow">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" name="nombre" value="{{nombre}}" pattern="[a-zA-Z]+" placeholder="First name" required autofocus tabindex="1">
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="col">
                <input type="text" class="form-control" name="apellido" value="{{apellido}}" pattern="[a-zA-Z]+" placeholder="Last name" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
            </div>
            <div class="form-row mt-3">
              <div class="col-md-12 mb-3">
                <input type="email" class="form-control" name="correo" value="{{correo}}" id="validationCustom01" placeholder="Email" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-12 mb-3">
                <input type="password" class="form-control" name="contraseña" id="validationCustom01" minlength="8" placeholder="Password" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <small id="emailHelp" align="center" class="form-text text-muted">la contraseña debe tener minimo 8 caracteres.</small>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-12 mb-3">
                <input type="password" class="form-control" name="validar" id="validationCustom01" minlength="8" placeholder="Verify password" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" name="celular" value="{{celular}}" placeholder="Identification" maxlength="10" pattern="[0-9]+" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="col">
                <input type="text" class="form-control" name="cedula" value="{{cedula}}" placeholder="Phone" maxlength="10" pattern="[0-9]+" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
            </div>
            <div class="custom-control custom-radio custom-control-inline mt-3">
              <input type="radio" id="customRadioInline1" name="sexo" value="Hombre" checked class="custom-control-input">
              <label class="custom-control-label" for="customRadioInline1">Hombre</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" id="customRadioInline2" name="sexo" value="Mujer" class="custom-control-input">
              <label class="custom-control-label" for="customRadioInline2">Mujer</label>
            </div>
            <div class="form-group mt-3">
              <div class="form-check">
                <input class="form-check-input" name="tyc" type="checkbox" value="acepto" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                  Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                  You must agree before submitting.
                </div>
              </div>
            </div>
            <button type="submit" class="mt-2 btn btn-success btn-lg btn-block">Registrate</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
