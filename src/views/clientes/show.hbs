<div class="container p-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table mt-4">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Cédula</th>
            <th scope="col">Dirección</th>
            <th scope="col">Correo</th>
            <th scope="col">Estado</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        </tbody>
          {{#each clientes}}
          <tr>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{cedula}}</td>
            <td>{{direccion}}</td>
            <td>{{correo}}</td>
            <td>{{estado}}</td>
            <td><a href="/cliente/edit/{{_id}}" class="btn btn-success">Editar</a></td>
            <td><a href="#" class="btn btn-danger">Borrar</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="/cliente/new" class="btn btn-primary">Nuevo cliente</a>
    </div>
  </div>
</div>