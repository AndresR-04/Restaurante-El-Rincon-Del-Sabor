<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tablaCategories" class="table table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
          </tr>
          <tbody>
            <% @categorias.each do |cat| %>
              <tr id="categoria_<%= cat.id %>">
                <td><%= cat.nombre %></td>
                <td><%= cat.description %></td>
                <td>
                  <%= link_to "editar", edit_category_path(cat), html_options = {class: "btn btn-info btn-xs", remote:true} %>
                  <%= link_to "Borrar", cat, remote: true, method: :delete, data: {confirm: "Â¿Borrar categoria: #{cat.nombre}?"}, class: "btn btn-danger btn-xs" %>
                </td>
              </tr>
           <% end %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>
