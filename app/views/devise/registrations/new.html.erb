<div class="container-fluid p-3 mb-4">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <div class="card shadow mt-4">
        <div class="card-body">
          <h2 align="center">Registrate</h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password,
                          hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Crear cuenta", class:"btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <p align="center"><%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>
