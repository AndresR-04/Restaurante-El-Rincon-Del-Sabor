<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card shadow">
        <div class="card-body">
          <h5 align="center">Olvidaste tu contraseña?</h5>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%# f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "restablecer la contraseña", class:"btn btn-primary btn-block" %>
            </div>
          <% end %>
          <p class="links mt-2" align="center"><%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
