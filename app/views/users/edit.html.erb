<%= simple_form_for(@user) do |f| %>
  <div class="form-inputs">
    <%= f.input :nombres %>
    <%= f.input :apellidos %>
    <%= f.input :direccion %>
    <%= f.input :telefono %>
    <%= f.input :sexo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Actualizar', class: "btn btn-primary btn-block" %>
  </div>
<% end %>
